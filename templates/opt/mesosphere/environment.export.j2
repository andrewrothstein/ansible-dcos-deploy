{% if proxy_env.http_proxy is defined %}
export PROXY_IP={{http_proxy_hostname}}
export PROXY_PORT={{http_proxy_port}}
export http_proxy="http://$PROXY_IP:$PROXY_PORT"
export https_proxy=$http_proxy
export ftp_proxy=$http_proxy
export no_proxy="{{proxy_env.no_proxy}}"
export HTTP_PROXY=$http_proxy
export HTTPS_PROXY=$http_proxy
export FTP_PROXY=$http_proxy
export NO_PROXY=$no_proxy
export JAVA_OPTS="$JAVA_OPTS -Dhttp.proxyHost=$PROXY_IP -Dhttp.proxyPort=$PROXY_PORT -Dhttps.proxyHost=$PROXY_IP -Dhttps.proxyPort=$PROXY_PORT -Dhttp.nonProxyHosts=$NO_PROXY -Dhttps.nonProxyHosts=$NO_PROXY"
{% endif %}